<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp400"
    android:focusable="false">

    <android.support.v4.view.ViewPager
        android:id="@+id/item_main_banner_viewPager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/item_main_banner_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/item_main_banner_viewPager"
        app:layout_constraintLeft_toLeftOf="@+id/item_main_banner_viewPager"
        app:layout_constraintRight_toRightOf="@+id/item_main_banner_viewPager"/>

</android.support.constraint.ConstraintLayout>